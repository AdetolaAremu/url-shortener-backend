{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["v1/controllers/*"],
      "@entity/*": ["v1/entity/*"],
      "@services/*": ["v1/services/*"],
      "@dto/*": ["v1/dto/*"],
      "@routes/*": ["v1/routes/*"],
      "@notifications/*": ["v1/notifications/*"],
      "@migrations/*": ["v1/migrations/*"],
      "@util/*": ["v1/util/*"],
      "@middlewares/*": ["v1/middlewares/*"]
    }
  }
}
